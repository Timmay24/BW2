<!DOCTYPE html>
<html>
<head>
  <title>Compshop</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to image_tag("header.png"), home_index_path %>

<div>
  <%= @current_user.id %>
</div>

<div>
  <%= form_tag(home_index_path, :method => "get", id: "search-form") do |i|%>
      <%= text_field_tag :search, params[:search], placeholder: "Search for product" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
